{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@/plugins/*": ["src/plugins/*"],
      "@/prompts/*": ["src/prompts/*"],
      "@/resources/*": ["src/resources/*"],
      "@/services/*": ["src/services/*"],
      "@/tools/*": ["src/tools/*"],
      "@/transports/*": ["src/transports/*"],
      "@/utils/*": ["src/utils/*"],
    }
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
