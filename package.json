{
  "name": "@vuetify/mcp",
  "version": "0.0.1",
  "description": "Machine Context Protocol server for Vuetify assistance",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "pnpm watch && node --watch dist/index.js",
    "config": "node dist/config/index.js",
    "bootstrap": "node --run build && node --run config",
    "watch": "tsc --watch",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix"
  },
  "keywords": [
    "vuetify",
    "mcp",
    "claude",
    "anthropic"
  ],
  "author": "john@vuetifyjs.com",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.10.2",
    "dotenv": "^16.5.0",
    "kolorist": "^1.8.0",
    "octokit": "^4.1.3",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@types/node": "^22.15.2",
    "@typescript-eslint/eslint-plugin": "^8.31.0",
    "@typescript-eslint/parser": "^8.31.0",
    "eslint": "^9.25.1",
    "eslint-plugin-import": "^2.31.0",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.0"
  }
}
